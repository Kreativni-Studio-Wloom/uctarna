rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Uživatelé mohou číst a zapisovat pouze své vlastní dokumenty
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Prodejny uživatele
      match /stores/{storeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Produkty prodejny
        match /products/{productId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
          // Povolit aktualizaci soldCount z server-side API pro SumUp callback
          allow update: if request.auth == null && 
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['soldCount', 'updatedAt']) &&
            request.resource.data.soldCount is number;
        }
        
        // Prodeje prodejny - povolit server-side zápis pro SumUp callback
        match /sales/{saleId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
          // Povolit zápis z server-side API (bez auth) pro SumUp callback
          allow write: if request.auth == null && 
            resource == null && // Pouze nové dokumenty
            request.resource.data.keys().hasAll(['items', 'totalAmount', 'paymentMethod', 'storeId', 'userId']) &&
            request.resource.data.paymentMethod == 'card' &&
            request.resource.data.storeId == storeId &&
            request.resource.data.userId == userId;
        }
        
        // Reporty prodejny
        match /reports/{reportId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
        
        // Stav košíku a odložené nákupy
        match /state/{document=**} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
        
        // Odložené nákupy
        match /pendingPurchases/{purchaseId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Globální kolekce (pokud budou potřeba)
    match /global/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Pouze čtení
    }
  }
}
