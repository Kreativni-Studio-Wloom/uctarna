rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Uživatelé mohou číst a zapisovat pouze své vlastní dokumenty
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Prodejny uživatele
      match /stores/{storeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Produkty prodejny
        match /products/{productId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
        
        // Prodeje prodejny
        match /sales/{saleId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
        
        // Reporty prodejny
        match /reports/{reportId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
        
        // Stav košíku a odložené nákupy
        match /state/{document=**} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
        
        // Odložené nákupy
        match /pendingPurchases/{purchaseId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Globální kolekce (pokud budou potřeba)
    match /global/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Pouze čtení
    }
  }
}
